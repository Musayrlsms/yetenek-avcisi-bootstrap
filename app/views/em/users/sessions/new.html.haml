.div{:style => "d-flex justify-content-center;   background-image: url(#{image_path "doga.png"}) "}
  .card{:style => "background-color:#239B56; opacity:0.5; margin-left:700px; "}
    .card-body{:style => "color:#2C3E50 font-family:verdana;"}
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .row
          .col
            = f.input :email
            = f.input :password, input_html: { autocomplete: 'current-password' }
            .actions
            - if devise_mapping.rememberable?
              .field
              = f.check_box :remember_me
              = f.label :remember_me
            .actions
              = f.submit "Log in"
            = render "/em/users/shared/links"
